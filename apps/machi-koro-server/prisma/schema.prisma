datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Landmark {
  bonus       String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  player      Player?  @relation(fields: [playerId], references: [id])
  playerId    String?
  price       Int?
  updatedAt   DateTime @updatedAt
}

model Player {
  balance   Int?
  companies Enterprise[]
  createdAt DateTime     @default(now())
  id        String       @id @default(cuid())
  landmarks Landmark[]
  name      String?
  updatedAt DateTime     @updatedAt
}

model Enterprise {
  bundle      String?
  color       String?
  createdAt   DateTime @default(now())
  description String?
  diceValue   Int?
  id          String   @id @default(cuid())
  name        String?
  player      Player?  @relation(fields: [playerId], references: [id])
  playerId    String?
  price       Int?
  profit      Int?
  typeField   String?
  updatedAt   DateTime @updatedAt
}

model EnterpriseBundle {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  quantity  Int?
  typeField String?
  updatedAt DateTime @updatedAt
}
